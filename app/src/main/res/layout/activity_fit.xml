<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:id="@+id/nestedScrollView"
    android:background="@color/colorPrimaryDark"
    android:padding="20dp"
    tools:context=".activities.LoginActivity">



    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_view_today"
                android:drawableTop="@drawable/running_man"
                android:background="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:text="@string/view_steps"
                style="?android:attr/borderlessButtonStyle"
            />

        <ProgressBar

            android:id="@+id/cPB"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:indeterminate="false"
            android:max="100"

            android:progressDrawable="@drawable/progressbar"/>

        <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:id="@+id/dispTextView"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:gravity="center"-->
            <!--android:textSize="32sp"-->
            <!---->
            <!--android:textColor="@color/colorText"-->
            <!--/>-->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/dispTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Progress"
                android:textColor="@color/colorTextHint"
                android:textSize="22sp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_view_calories"
                android:background="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:layout_marginLeft="250dp"
                android:drawableTop="@drawable/rowing_man"
                android:text="@string/view_calories"
                style="?android:attr/borderlessButtonStyle"
                />

        </RelativeLayout>

        <android.support.v7.widget.AppCompatTextView
        android:id="@+id/dispTextView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Track your progress"
        android:textColor="@color/hint"/>

        <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_view_week"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:textColor="@color/font"
        android:background="@color/button"
        android:text="@string/view_steps"
        />

        <!--<android.support.v7.widget.AppCompatButton-->
            <!--android:id="@+id/btn_view_today"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:textColor="@color/font"-->
            <!--android:background="@color/button"-->
            <!--android:text="@string/view_today"-->
