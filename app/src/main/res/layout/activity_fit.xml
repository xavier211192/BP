            <!--android:layout_marginTop="10dp"-->
            <!--android:textColor="@color/font"-->
            <!--android:background="@color/button"-->
            <!--android:text="@string/view_calories"-->
            <!--/>-->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_view_glucose"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/font"
            android:background="@color/button"
            android:text="@string/view_glucose"
            android:onClick="glucoseActivity"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_view_medication"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/font"
            android:background="@color/button"
            android:text="@string/log_medication"
            android:onClick="medicationActivity"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_view_test"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/font"
            android:background="@color/button"
            android:text="@string/risk_test"
            android:onClick="testActivity"
            />



        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_view_info"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/font"
            android:background="@color/button"
            android:text="Info"
            android:onClick="diabetesinfoActivity"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_view_graph"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/font"
            android:background="@color/button"
            android:text="Graph"
            android:onClick="graphActivity"
            />

        <android.support.v7.widget.AppCompatButton
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/font"
            android:background="@color/button"
            android:text="TTS"
            android:onClick="ttsActivity"
            />






    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>